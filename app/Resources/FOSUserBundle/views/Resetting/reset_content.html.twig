{% trans_default_domain 'FOSUserBundle' %}
<div class="cadre">
	<div class="row">
		<div class="col-sm-12">
			<h3><span class="glyphicon glyphicon-option-vertical"></span> Modifier mot de passe </h3>
		</div>
	</div>

	<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
	{{ form_widget(form._token) }}

		<div class="row">
			<div class="col-sm-6">
				{% if form.plainPassword.first.vars.errors[0].message is defined %}
					<div class="alert alert-danger">
						{{ form.plainPassword.first.vars.errors[0].message }}
					</div>
				{% endif %}
				<div class="input-group">
					<span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-lock"></span></span>
					<input id="fos_user_resetting_form_plainPassword_first" name="fos_user_resetting_form[plainPassword][first]" required="required" type="password" class="form-control" placeholder=" Mot de passe" aria-describedby="basic-addon1">
				</div>
			</div>
			<div class="col-sm-6">
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6">
				{% if form.plainPassword.second.vars.errors[0].message is defined %}
					<div class="alert alert-danger">
						{{ form.plainPassword.second.vars.errors[0].message }}
					</div>
				{% endif %}
				<div class="input-group">
					<span class="input-group-addon" id="basic-addon3"><span class="glyphicon glyphicon-lock"></span></span>
					<input id="fos_user_resetting_form_plainPassword_second" name="fos_user_resetting_form[plainPassword][second]" required="required" type="password" class="form-control" placeholder=" Confirmation mot de passe" aria-describedby="basic-addon3">
				</div>
			</div>
			<div class="col-sm-6">
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6 center">
				<input type="submit" value="{{ 'resetting.reset.submit'|trans }}" class="btn"/>
			</div>
			<div class="col-sm-6">
			</div>
		</div>
	</form>
</div>
