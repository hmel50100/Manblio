{% extends "::base.html.twig" %}

{% block principale %}
	<div id="accordion">
		<h3> Modifier un livre </h3>
		<div>
			<form method="post" action="{{ path('modifierLivre', {'id':id })}}">
				{{form_widget(form)}}

				<div>
					<label for="ajouter">&nbsp;</label>
					<input type="submit" id="ajouter" value="Modifier">
				</div>
			</form>
		</div>
	</div>
	<script>
    	$(document).ready(function() {
        	$( "#accordion" ).accordion({icons: null});
    	});
    </script>
{% endblock %}